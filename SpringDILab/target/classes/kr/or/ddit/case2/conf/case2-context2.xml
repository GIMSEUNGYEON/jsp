<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 빈 등록 순서 : bibitan, shotgun, hunter 순서로 등록 -->
<!-- 빈 객체 생성 순서 : hunter, bibitan, shotgun 순서로 생성 -->
<!-- 모든 객체는 주입하기 전까지 생성을 지연시킴 -->
<!-- hunter가 attack하기 전에 공격 시점을 확보하고, log로 출력함. -->
<!-- 단, LocalDateTime 객체는 직접 생성하지 않고, 컨테이너를 통해 관리함. -->
<!-- hunter는 Thread.sleep을 기반으로 1초의 간격으로 총 세번[shotgun, bibitan, shotgun] 공격함. -->
<!-- hunter의 인스턴스는 단 하나, Gun의 인스턴스는 재사용하지 않음. -->

	<bean class="kr.or.ddit.case2.meterial.Bibitan" id="bibitan" scope="prototype"></bean>
	<bean class="kr.or.ddit.case2.meterial.ShotGun" id="shotGun" scope="prototype" depends-on="bibitan"></bean>
	
	<bean class="kr.or.ddit.case2.meterial.Hunter" id="hunter" lazy-init="true"
		p:gun-ref="shotGun" 
	/>
	<bean id="LocalDateTime" class="java.time.LocalDateTime" factory-method="now" scope="prototype"></bean>

</beans>
